<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ruoyuli.cs301.cs.wm.edu.amazebyruoyu">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".gui.AMazeActivity"
            android:label="@string/maze_activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".gui.GeneratingActivity"
            android:label="@string/gen_activity">
        </activity>
        <activity android:name=".gui.PlayAnimationActivity"
            android:label="@string/ani_activity">
        </activity>
        <activity android:name=".gui.PlayManuallyActivity"
            android:label="@string/man_activity">
        </activity>
        <activity android:name=".gui.WinningActivity"
            android:label="WinningActivity">
        </activity>
        <activity android:name=".gui.LosingActivity"
            android:label="LosingActivity">
        </activity>
    </application>

</manifest>